#:kivy 2.0
#:import get_color_from_hex kivy.utils.get_color_from_hex
#:import Color mui.ColorTheme.Color
#:set cor Color()

<HomeScreen>:
    MDFloatLayout:
        MDFloatLayout:
            #md_bg_color: get_color_from_hex(cor.azulEscuro())
            size_hint: 1, None
            height: 70
            pos_hint: {'top': 0.98}

            MDTextField:
                id: text_search
                size_hint: 0.93, 0.75
                mode: "fill"
                radius: 20, 20, 20, 20
                multiline: False
                active_line: False
                text_color_normal: get_color_from_hex(cor.vermelho())
                text_color_focus: get_color_from_hex(cor.vermelho())
                line_color_normal: get_color_from_hex(cor.vermelho())
                line_color_focus: get_color_from_hex(cor.vermelho())
                fill_color_normal: get_color_from_hex(cor.branco())
                fill_color_focus: get_color_from_hex(cor.branco())
                pos_hint: {"center_x": 0.5, "center_y": 0.465}

            MDIconButton:
                icon: "magnify"
                user_font_size: '35sp'
                pos_hint: {"center_x": 0.9, "center_y": 0.465}
                theme_text_color: "Custom"
                text_color: get_color_from_hex(cor.vermelho())
                on_release:
                    root.search(text_search.text)

        MDBoxLayout:
            size_hint: 1, 0.85
            height: self.minimum_height
            orientation: "vertical"
            pos_hint: {'top': 0.875}
            #md_bg_color: get_color_from_hex(cor.azulClaro())

            ScrollView:
                size_hint: 1, 1
                MDList:
                    id: container
                    padding: 20

            Widget:
                size_hint: 1, 0.2