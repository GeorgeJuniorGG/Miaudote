#:kivy 2.0
#:import get_color_from_hex kivy.utils.get_color_from_hex
#:import Color mui.ColorTheme.Color
#:set cor Color()

<HomeScreen>:
    MDFloatLayout:
        MDFloatLayout:
            #md_bg_color: get_color_from_hex(cor.azulEscuro())
            size_hint: 1, None
            height: 70
            pos_hint: {'top': 0.98}
            MDTextField:
                id: text_search
                size_hint: 0.93, 0.8
                multiline: False
                mode: "fill"
                text_color_normal: get_color_from_hex(cor.vermelho())
                text_color_focus: get_color_from_hex(cor.vermelho())
                line_color_normal: get_color_from_hex(cor.vermelho())
                line_color_focus: get_color_from_hex(cor.vermelho())
                pos_hint: {"center_x": 0.5, "center_y": 0.5}

            MDIconButton:
                icon: "magnify"
                pos_hint: {"center_x": 0.9, "center_y": 0.5}
                theme_text_color: "Custom"
                text_color: get_color_from_hex(cor.vermelho())
                on_release:
                    root.search(text_search.text)

        MDBoxLayout:
            size_hint: 1, 0.75
            height: self.minimum_height
            orientation: "vertical"
            pos_hint: {'top': 0.88}
            #md_bg_color: get_color_from_hex(cor.azulClaro())

            ScrollView:
                MDList:
                    id: container
                    padding: 20
