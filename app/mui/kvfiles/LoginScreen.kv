#:kivy 2.0
<LoginScreen>:
    MDFloatLayout:
        MDIconButton:
            id: _LoginArrowButton
            icon: "arrow-left"
            pos_hint: {"center_y": 0.95}
            theme_text_color: "Custom"
            text_color: '97B9C0'
            on_release:
                root.go_backward()        

        MDLabel:
            text: "Login"
            theme_text_color: "Custom"
            text_color: 0.549, 0.313, 0.258, 1
            pos_hint: {'center_y': 0.8}
            halign: "center"
            font_size: "25sp"

        MDTextFieldRound:
            id: email
            hint_text: "E-mail"
            multiline: False
            line_color: '#366873'
            hint_text_color: '#366873'
            normal_color: '#ffffff'
            color_active: '#ffffff'
            text_color: 0.592, 0.725, 0.752, 1
            pos_hint: {"center_x": 0.5, "center_y": 0.6}
            size_hint: 0.65, 0.045

        MDTextFieldRound:
            id: password
            hint_text: "Senha"
            password: True
            multiline: False
            line_color: '#366873'
            hint_text_color: '#366873'
            normal_color: '#ffffff'
            color_active: '#ffffff'
            pos_hint: {"center_x": 0.5, "center_y": 0.53}
            size_hint: 0.65, 0.045

        MDFillRoundFlatButton:
            text: "Esqueceu a senha?"
            font_size: 10
            theme_text_color: "Custom"
            text_color: '#366873'
            md_bg_color: '#ffffff'
            pos_hint: {"center_x": 0.3, "center_y": 0.48}
            size_hint: 0.3, 0.04

        MDFillRoundFlatButton:
            id: _LoginLoginButton
            text: "Logar"
            font_size: 15
            elevation: 8
            theme_text_color: "Custom"
            text_color: '#ffffff'
            md_bg_color: '#97B9C0'
            pos_hint: {"center_x": 0.5, "center_y": 0.35}
            size_hint: 0.35, 0.04
            on_press: root.login(email.text, password.text)