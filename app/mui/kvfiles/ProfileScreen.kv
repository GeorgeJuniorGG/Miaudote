#:kivy 2.0
<ProfileScreen>
    canvas:
        Color:
            rgba: 0.592, 0.725, 0.752, 1
        Line:
            points: self.x, 0.9*self.top, self.right, 0.9*self.top 
            width: 10
        Line:
            points: self.x, self.top - 10, self.right, self.top - 10
            width: 10

    MDIconButton:
        icon: "arrow.png"
        user_font_size: '5sp'
        pos_hint:{'center_x':0.08, 'center_y': 0.94}
        on_release:
            root.go_backward()
    
    MDLabel:
        text: "Miaudote"
        font_name: "Spirax-Regular"
        theme_text_color: "Custom"
        text_color: 0.549, 0.313, 0.258, 1
        pos_hint: {'center_y': 0.94}
        halign: "center"
        font_size: "25sp"

    MDIconButton:
        icon: "account-circle"
        user_font_size: "72sp"
        pos_hint: {'center_x':0.20, 'center_y': 0.78}
    
    MDIconButton:
        icon: "Logout.png"
        user_font_size: "20sp"
        pos_hint: {'center_x': 0.85, 'center_y': 0.78}
    
    MDTextField:
        hint_text: "Nome"
        text: "Nome do Usuário"
        size_hint: 0.8, 0.1
        color_mode: "custom"
        line_color_normal: '#366873'
        pos_hint: {'center_x': 0.5, 'center_y': 0.65}
        disabled: 'true'
    
    MDTextField:
        hint_text: "CPF"
        text: "CPF do Usuário"
        size_hint: 0.8, 0.1
        color_mode: "custom"
        line_color_normal: '#366873'
        pos_hint: {'center_x': 0.5, 'center_y': 0.50}
        disabled: 'true'
    
    MDTextField:
        hint_text: "Email"
        text: "Email do Usuário"
        size_hint: 0.8, 0.1
        color_mode: "custom"
        line_color_normal: '#366873'
        pos_hint: {'center_x': 0.5, 'center_y': 0.35}
        disabled: 'true'
    
    MDTextField:
        hint_text: "Telefone"
        text: "Telefone do Usuário"
        size_hint: 0.8, 0.1
        color_mode: "custom"
        line_color_normal: '#366873'
        pos_hint: {'center_x': 0.5, 'center_y': 0.20}
        disabled: 'true'
    
    MDBoxLayout:
        size_hint: 1, None
        height: self.minimum_height
        y: - self.height
        orientation: 'vertical'

        MDBottomNavigation:
            panel_color: 151/255, 185/255, 192/255, 1
            text_color_normal: 1, 1, 1, 1
            text_color_active: 1, 1, 1, 1

            MDBottomNavigationItem:
                text: 'Menu'
                icon: 'menu'


            MDBottomNavigationItem:
                text: 'Início'
                icon: 'home'


            MDBottomNavigationItem:
                text: 'Perfil'
                icon: 'account-circle'