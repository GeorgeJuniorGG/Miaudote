#:kivy 2.0
<SignUpScreen2b>
    MDProgressBar:
        value: 50
        color: '#366873'
        pos_hint:{'center_x':0.5, 'center_y': 0.92}

    MDIconButton:
        id: _SignupTwoBArrowButton
        icon: "arrow.png"
        user_font_size: '5sp'
        pos_hint:{'center_x':0.08, 'center_y': 0.96}
        on_release:
            root.go_backward()

    MDLabel:
        text: "Localização"
        theme_text_color: "Custom"
        text_color: '#8C5042'
        pos_hint: {'center_y': 0.96}
        halign: "center"
        font_size: "20sp"

    MDTextFieldRound:
        hint_text: "Estado"
        size_hint: (0.8, 0.055)
        normal_color: '#ffffff'
        hint_text_color: 54/255, 104/255, 115/255, 1
        font_size: '19sp'
        border_color: '#366873'
        color_active: '#ffffff'
        pos_hint: {'center_x': 0.5, 'center_y': 0.71}

    MDTextFieldRound:
        hint_text: "Cidade"
        size_hint: (0.8, 0.055)
        normal_color: '#ffffff'
        hint_text_color: 54/255, 104/255, 115/255, 1
        font_size: '19sp'
        border_color: '#366873'
        color_active: '#ffffff'
        pos_hint: {'center_x': 0.5, 'center_y': 0.62}

    MDTextFieldRound:
        hint_text: "CEP"
        size_hint: (0.8, 0.055)
        normal_color: '#ffffff'
        hint_text_color: 54/255, 104/255, 115/255, 1
        font_size: '19sp'
        border_color: '#366873'
        color_active: '#ffffff'
        pos_hint: {'center_x': 0.5, 'center_y': 0.53}

    MDTextFieldRound:
        hint_text: "Bairro"
        size_hint: (0.8, 0.055)
        normal_color: '#ffffff'
        hint_text_color: 54/255, 104/255, 115/255, 1
        font_size: '19sp'
        border_color: '#366873'
        color_active: '#ffffff'
        pos_hint: {'center_x': 0.5, 'center_y': 0.44}

    MDTextFieldRound:
        hint_text: "Endereço"
        size_hint: (0.8, 0.055)
        normal_color: '#ffffff'
        hint_text_color: 54/255, 104/255, 115/255, 1
        font_size: '19sp'
        border_color: '#366873'
        color_active: '#ffffff'
        pos_hint: {'center_x': 0.5, 'center_y': 0.35}

    MDTextFieldRound:
        hint_text: "Número"
        size_hint: (0.8, 0.055)
        normal_color: '#ffffff'
        hint_text_color: 54/255, 104/255, 115/255, 1
        font_size: '19sp'
        border_color: '#366873'
        color_active: '#ffffff'
        pos_hint: {'center_x': 0.5, 'center_y': 0.26}
    
    MDBoxLayout:
        width: self.minimum_width
        padding: [self.right/10, 0, 0, 0]
        spacing: '4dp'

        MDCheckbox:
            pos_hint: {'center_y': 0.20}
            size_hint: None, None
            size: "48dp", "48dp"
            color: [0.21,0.4,0.45,1]
            selected_color: [0.21,0.4,0.45,1]
            adaptive_size: False

        MDLabel:
            text: "Li e aceito os Termos de Uso"
            width: '20px'
            font_size: '17sp'
            pos_hint: {'center_y': 0.20}
            theme_text_color: 'Custom'
            text_color: '#366873'
            adaptive_size: True

        MDIconButton:
            icon: "information-outline"
            user_font_size: '20sp'
            pos_hint:{'center_y': 0.20}
            adaptive_size: True
            on_release:
                root.show_terms_of_service_dialog()

    MDFillRoundFlatButton:
        id: _SignupTwoBForwardButton
        text: "Continuar"
        md_bg_color: 0.592, 0.725, 0.752, 1
        font_size: "20sp"
        size_hint: (0.4, 0.05)
        pos_hint: {'center_x': 0.5, 'center_y': 0.15}
        on_release:
            root.go_forward()
