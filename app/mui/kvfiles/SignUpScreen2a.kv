#:kivy 2.0
<SignUpScreen2a>
    MDProgressBar:
        value: 25
        color: '#366873'
        pos_hint:{'center_x':0.5, 'center_y': 0.92}

    MDIconButton:
        id: _SignupTwoAArrowButton
        icon: "arrow.png"
        user_font_size: '5sp'
        pos_hint:{'center_x':0.08, 'center_y': 0.96}
        on_release:
            root.go_backward()

    MDLabel:
        text: "Localização"
        theme_text_color: "Custom"
        text_color: '#8C5042'
        pos_hint: {'center_y': 0.96}
        halign: "center"
        font_size: "20sp"

    MDTextField:
        hint_text: "Estado"
        size_hint: 0.8, 0.1
        color_mode: "custom"
        line_color_normal: '#366873'
        line_color_focus: '#366873'
        pos_hint: {'center_x': 0.5, 'center_y': 0.71}

    MDTextField:
        hint_text: "Cidade"
        size_hint: 0.8, 0.1
        color_mode: "custom"
        line_color_normal: '#366873'
        line_color_focus: '#366873'
        pos_hint: {'center_x': 0.5, 'center_y': 0.62}

    MDTextField:
        hint_text: "CEP"
        size_hint: 0.8, 0.1
        color_mode: "custom"
        line_color_normal: '#366873'
        line_color_focus: '#366873'
        pos_hint: {'center_x': 0.5, 'center_y': 0.53}

    MDTextField:
        hint_text: "Bairro"
        size_hint: 0.8, 0.1
        color_mode: "custom"
        line_color_normal: '#366873'
        line_color_focus: '#366873'
        pos_hint: {'center_x': 0.5, 'center_y': 0.44}

    MDTextField:
        hint_text: "Endereço"
        size_hint: 0.8, 0.1
        color_mode: "custom"
        line_color_normal: '#366873'
        line_color_focus: '#366873'
        pos_hint: {'center_x': 0.5, 'center_y': 0.35}

    MDTextField:
        hint_text: "Número"
        size_hint: 0.8, 0.1
        color_mode: "custom"
        line_color_normal: '#366873'
        line_color_focus: '#366873'
        pos_hint: {'center_x': 0.5, 'center_y': 0.26}

    MDFillRoundFlatButton:
        id: _SignupTwoAForwardButton
        text: "Continuar"
        md_bg_color: 0.592, 0.725, 0.752, 1
        font_size: "20sp"
        size_hint: (0.4, 0.05)
        pos_hint: {'center_x': 0.5, 'center_y': 0.15}
        on_release:
            root.go_forward()
