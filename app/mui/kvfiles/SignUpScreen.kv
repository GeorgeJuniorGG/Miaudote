#:kivy 2.0
<SignUpScreen>
    MDProgressBar:
        value: 0
        color: '#366873'
        pos_hint:{'center_x':0.5, 'center_y': 0.92}

    MDIconButton:
        id: _SignupArrowButton
        icon: "arrow.png"
        user_font_size: '5sp'
        pos_hint:{'center_x':0.08, 'center_y': 0.96}
        on_release:
            root.go_backward()

    MDLabel:
        text: "Informações Pessoais"
        theme_text_color: "Custom"
        text_color: '#8C5042'
        pos_hint: {'center_y': 0.96}
        halign: "center"
        font_size: "20sp"

    MDTextField:
        hint_text: "Nome e Sobrenome"
        size_hint: 0.8, 0.1
        color_mode: "custom"
        line_color_normal: '#366873'
        line_color_focus: '#366873'
        pos_hint: {'center_x': 0.5, 'center_y': 0.80}

    MDTextField:
        hint_text: "Data de Nascimento"
        size_hint: 0.8, 0.1
        color_mode: "custom"
        line_color_normal: '#366873'
        line_color_focus: '#366873'
        pos_hint: {'center_x': 0.5, 'center_y': 0.71}

    MDTextField:
        hint_text: "CPF"
        size_hint: 0.8, 0.1
        color_mode: "custom"
        line_color_normal: '#366873'
        line_color_focus: '#366873'
        pos_hint: {'center_x': 0.5, 'center_y': 0.62}

    MDTextField:
        hint_text: "Email"
        size_hint: 0.8, 0.1
        color_mode: "custom"
        line_color_normal: '#366873'
        line_color_focus: '#366873'
        pos_hint: {'center_x': 0.5, 'center_y': 0.53}

    MDTextField:
        hint_text: "Senha"
        size_hint: 0.8, 0.1
        color_mode: "custom"
        line_color_normal: '#366873'
        line_color_focus: '#366873'
        pos_hint: {'center_x': 0.5, 'center_y': 0.44}

    MDTextField:
        hint_text: "Confirme sua Senha"
        size_hint: 0.8, 0.1
        color_mode: "custom"
        line_color_normal: '#366873'
        line_color_focus: '#366873'
        pos_hint: {'center_x': 0.5, 'center_y': 0.35}
    MDBoxLayout:
        width: self.minimum_width
        padding: [self.right/10, 0, 0, 0]
        spacing: '4dp'

        MDCheckbox:
            id: _check
            pos_hint: {'center_y': 0.28}
            size_hint: None, None
            size: "48dp", "48dp"
            color: [0.21,0.4,0.45,1]
            selected_color: [0.21,0.4,0.45,1]
            adaptive_size: False

        MDLabel:
            text: "Sou um Protetor"
            width: '20px'
            font_size: '17sp'
            pos_hint: {'center_y': 0.28}
            theme_text_color: 'Custom'
            text_color: '#366873'
            adaptive_size: True

        MDIconButton:
            icon: "information-outline"
            user_font_size: '20sp'
            pos_hint:{'center_y': 0.28}
            adaptive_size: True
            on_release:
                root.show_protectors_dialog()

    MDFillRoundFlatButton:
        id: _SignupForwardButton
        text: "Continuar"
        md_bg_color: 0.592, 0.725, 0.752, 1
        font_size: "20sp"
        size_hint: (0.4, 0.05)
        pos_hint: {'center_x': 0.5, 'center_y': 0.15}
        on_release:
            root.go_forwardB() if _check.active else root.go_forwardA()
