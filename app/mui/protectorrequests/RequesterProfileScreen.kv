#:kivy 2.0
#:import get_color_from_hex kivy.utils.get_color_from_hex
#:import Color mui.ColorTheme.Color
#:set cor Color()

<RequesterProfileScreen>:
    canvas:
        Color:
            rgba: get_color_from_hex(cor.azulClaro())
        Line:
            points: self.x, 0.9*self.top, self.right, 0.9*self.top 
            width: 10
        Line:
            points: self.x, self.top - 10, self.right, self.top - 10
            width: 10

    MDIconButton:
        icon: "arrow-left"
        user_font_size: '35sp'
        pos_hint:{'center_x':0.08, 'center_y': 0.94}
        theme_text_color: "Custom"
        text_color: get_color_from_hex(cor.azulClaro())
        on_release:
            root.go_backward()
    
    MDLabel:
        text: "Miaudote"
        font_name: "Spirax-Regular"
        theme_text_color: "Custom"
        text_color: get_color_from_hex(cor.vermelho())
        pos_hint: {'center_y': 0.94}
        halign: "center"
        font_size: "25sp"

    MDIconButton:
        icon: "account-circle"
        user_font_size: "65sp"
        pos_hint: {'center_x':0.50, 'center_y': 0.82}
        canvas.before:
            Color:
                rgba: get_color_from_hex(cor.bege()+'80')
            Ellipse:
                size: 62, 62
                pos: self.x+12.5, self.y+12.5

    MDTextField:
        hint_text: "Nome"
        text: "Nome do Usuário"
        size_hint: 0.8, 0.1
        color_mode: "custom"
        line_color_normal: get_color_from_hex(cor.azulEscuro())
        pos_hint: {'center_x': 0.5, 'center_y': 0.72}
        disabled: 'true'
    
    MDTextField:
        hint_text: "Localização do Usuário"
        text: "Cidade, Estado do Usuário"
        size_hint: 0.8, 0.1
        color_mode: "custom"
        line_color_normal: get_color_from_hex(cor.azulEscuro())
        pos_hint: {'center_x': 0.5, 'center_y': 0.64}
        disabled: 'true'
    
    MDTextField:
        hint_text: "Espaço"
        text: "Tipo de Residência + Espaço Disponível + Quintal?"
        size_hint: 0.8, 0.1
        color_mode: "custom"
        line_color_normal: get_color_from_hex(cor.azulEscuro())
        pos_hint: {'center_x': 0.5, 'center_y': 0.56}
        disabled: 'true'
    
    MDTextField:
        hint_text: "Tempo Disponível para o Pet"
        text: "Tempo Disponível do Usuário"
        size_hint: 0.8, 0.1
        color_mode: "custom"
        line_color_normal: get_color_from_hex(cor.azulEscuro())
        pos_hint: {'center_x': 0.5, 'center_y': 0.48}
        disabled: 'true'
    
    MDTextField:
        hint_text: "Possui outro animal?"
        text: "Sim ou Não"
        size_hint: 0.8, 0.1
        color_mode: "custom"
        line_color_normal: get_color_from_hex(cor.azulEscuro())
        pos_hint: {'center_x': 0.5, 'center_y': 0.40}
        disabled: 'true'
    
    MDTextField:
        hint_text: "Possui Rotas de Fuga?"
        text: "Sim ou Não"
        size_hint: 0.8, 0.1
        color_mode: "custom"
        line_color_normal: get_color_from_hex(cor.azulEscuro())
        pos_hint: {'center_x': 0.5, 'center_y': 0.32}
        disabled: 'true'
    
    MDTextField:
        hint_text: "Crianças Frequentam o Ambiente?"
        text: "Sim ou Não"
        size_hint: 0.8, 0.1
        color_mode: "custom"
        line_color_normal: get_color_from_hex(cor.azulEscuro())
        pos_hint: {'center_x': 0.5, 'center_y': 0.24}
        disabled: 'true'
    
    MDFillRoundFlatButton:
        text: "Aceitar"
        md_bg_color: get_color_from_hex(cor.azulClaro())
        font_size: "20sp"
        size_hint: (0.4, 0.05)
        pos_hint: {'center_x': 0.25, 'center_y': 0.16}
    
    MDRoundFlatButton:
        text: "Rejeitar"
        font_size: "20sp"
        theme_text_color: "Custom"
        text_color: get_color_from_hex(cor.azulEscuro())
        line_color: get_color_from_hex(cor.azulClaro())
        pos_hint: {"center_x": 0.75, "center_y": 0.16}
        size_hint: (0.4, 0.05)
    
    MDBoxLayout:
        size_hint: 1, None
        height: self.minimum_height
        y: - self.height
        orientation: 'vertical'

        MDBottomNavigation:
            panel_color: get_color_from_hex(cor.azulClaro())
            text_color_active: get_color_from_hex(cor.cinzaClaro())
            text_color_normal: get_color_from_hex(cor.azulCinza())

            canvas.after:
                Color:
                    rgba: get_color_from_hex(cor.branco())
                Line:
                    points: self.x+dp(123), 65, self.x+dp(123), 0
                    width: 0.3

                Line:
                    points: self.x+dp(2*123 + 7), 65, self.x+dp(2*123 + 7), 0
                    width: 0.3

            MDBottomNavigationItem:
                text: 'Menu'
                icon: 'menu'


            MDBottomNavigationItem:
                text: 'Início'
                icon: 'home'


            MDBottomNavigationItem:
                text: 'Perfil'
                icon: 'account-circle'