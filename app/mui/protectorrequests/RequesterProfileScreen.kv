#:kivy 2.0
#:import get_color_from_hex kivy.utils.get_color_from_hex
#:import Color mui.ColorTheme.Color
#:set cor Color()

<RequesterProfileScreen>:
    md_bg_color: get_color_from_hex(cor.azulCinzaClaro()+'11')

    MiauLogo:
        screen: root

    MDFloatLayout:
        size_hint: None, None
        height: 80
        width: 80
        pos_hint: {'top': 0.89, 'center_x':0.50}

        canvas.before:
            Color: 
                rgba: get_color_from_hex(cor.vermelho())  
            RoundedRectangle:
                size: dp(90), dp(90)
                pos: self.x - dp(5), self.y - dp(5)
                radius: 50,50

        FitImage:
            id: adopterImage
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            radius: 50, 50

    MDGridLayout:
        pos_hint: {'top': 0.78}
        cols: 1
        spacing: '20dp'
        padding: '20dp','20dp'

        UserInfo:
            id: name
            fieldName: 'Nome'
        
        UserInfo:
            id: city
            fieldName: 'Localização'

        UserInfo:
            id: availableSpace
            fieldName: 'Espaço disponível'

        UserInfo:
            id: availableTime
            fieldName: 'Tempo disponível para o Animal'

        UserInfo:
            id: haveAnimal
            fieldName: 'Possui outro Animal?'

        UserInfo:
            id: escapeRoutes
            fieldName: 'Possui rotas de fuga?'

        UserInfo:
            fieldName: 'Crianças frequentam o ambiente?'
            id: haveChildren

        Widget:
            size_hint: 1, 0.85

    MDFillRoundFlatButton:
        text: "Aceitar"
        font_size: "20sp"
        text_color: get_color_from_hex(cor.branco())
        md_bg_color: get_color_from_hex(cor.azulClaro())
        pos_hint: {'center_x': 0.3, 'center_y': 0.08}
        size_hint: 0.35, 0.05
        on_release:
            root.approveRequest()
  
    MDFillRoundFlatButton:
        text: "Rejeitar"
        font_size: "20sp"
        theme_text_color: "Custom"
        text_color: get_color_from_hex(cor.branco())
        md_bg_color: get_color_from_hex(cor.vermelho())
        pos_hint: {"center_x": 0.7, "center_y": 0.08}
        size_hint: 0.35, 0.05
        on_release:
            root.declineRequest()