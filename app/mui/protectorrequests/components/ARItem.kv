#:kivy 2.0
#:import get_color_from_hex kivy.utils.get_color_from_hex
#:import Color mui.ColorTheme.Color
#:set cor Color()

<ARLabel>:
    canvas.before:
        Color:
            rgba: get_color_from_hex(cor.azulClaro())
    
        RoundedRectangle:
            size: self.size[0], self.size[1]
            pos: self.pos
            radius: 5,5
    
    #size_hint: 1, 1
    pos_hint: {'center_y': 0.5}
    bold: True
    adaptive_height: True
    theme_text_color: "Custom"
    text_color: get_color_from_hex(cor.branco())

<ChatButton>:
    icon: 'message-outline'
    theme_text_color: "Custom"
    text_color: get_color_from_hex(cor.vermelho())
    user_font_size: "25dp"
    pos_hint: {'right': 0.75, 'center_y': 0.45}

<RemoveButton>:
    icon: 'close'
    theme_text_color: "Custom"
    text_color: get_color_from_hex(cor.vermelho())
    user_font_size: "25dp"
    pos_hint: {'right': 1, 'center_y': 0.45}

<ARItem>:
    size_hint: 1, None
    height: 130
    petCharsBox: pet_chars
    petImage: pet_image
    petContent: pet_content
    petNLabel: pet_name
    petDLabel: pet_descr
    buttonsContainer: buttons_container
    #md_bg_color: get_color_from_hex(cor.cinzaClaro())
    on_release: print('abrir soliticação')

    MDFloatLayout:
        id: pet_image
        pos_hint: {'x': 0.01,'center_y': 0.5}
        size_hint: None, None
        size: self.parent.width*0.3, self.parent.height*0.8

        FitImage:
            source: root.petImageSource
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            radius: 15, 15, 15, 15

    MDFloatLayout:
        id: pet_content
        pos_hint: {'x': 0.333,'top': 1}
        size_hint: None, None
        size: self.parent.width - self.parent.width/3, self.parent.height
        #md_bg_color: get_color_from_hex(cor.violeta())
        
        MDLabel:
            id: pet_name
            text: root.petName
            pos_hint: {'x': 0, 'center_y': 0.82}
            size_hint: 0.6, 0.4
            #halign: 'center'
            #size: 100, 50
            theme_text_color: "Custom"
            text_color: get_color_from_hex(cor.vermelho())
            font_size: '22sp'
            bold: True


        MDGridLayout:
            id: pet_chars
            spacing: 5
            cols:1
            size_hint: 0.35, 0.4
            #size: dp(80), dp(80)
            minimum_size: dp(80), dp(80)
            #md_bg_color: get_color_from_hex(cor.violeta())
            pos_hint: {'x': 0, 'center_y': 0.48}

        MDLabel:
            id: pet_descr
            text: root.petDescription
            font_size: '14sp'
            pos_hint: {'x': 0.4, 'center_y': 0.5}
            theme_text_color: "Custom"
            text_color: get_color_from_hex(cor.azulEscuro())
            bold: True
            size_hint: 0.5, 0.5
            #size: 100, 100
        
        MDFloatLayout:
            id: buttons_container
            pos_hint: {'center_x': 0.68, 'center_y': 0.1}
            size_hint: 0.6, 0.2
            #md_bg_color: get_color_from_hex(cor.violeta())
            # ChatButton:
            #     on_release: print('Abrir o Chat') 
            # RemoveButton:
            #     on_release: print('Recusar soliticação')