#:kivy 2.0
#:import get_color_from_hex kivy.utils.get_color_from_hex
#:import Color mui.ColorTheme.Color
#:set cor Color()

<RequestsScreen>:
    canvas:
        Color:
            rgba: get_color_from_hex(cor.azulClaro())
        Line:
            points: self.x, 0.9 * self.top, self.right, 0.9 * self.top 
            width: 10
        Line:
            points: self.x, self.top - 10, self.right, self.top - 10
            width: 10
        Color:
            rgba: get_color_from_hex(cor.vermelho())
        Line:
            points: self.x, 0.8*self.top, self.right, 0.8*self.top
            width: 1
            
    MDLabel:
        text: "Miaudote"
        font_name: "Spirax-Regular"
        theme_text_color: "Custom"
        text_color: get_color_from_hex(cor.vermelho())
        pos_hint: {'center_y': 0.94}
        halign: "center"
        font_size: "25sp"

    MDLabel:
        text: "Solicitações Pendentes"
        theme_text_color: "Custom"
        text_color: get_color_from_hex(cor.vermelho())
        halign: "center"
        font_size: "25sp"
        pos_hint: {"center_x": 0.5, "center_y": 0.84}

    MDBoxLayout:
        size_hint: 1, 0.80
        height: self.minimum_height
        orientation: "vertical"

        ScrollView:
            MDList:
                id: container
                padding: 5