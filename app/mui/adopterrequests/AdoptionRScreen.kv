#:kivy 2.0
#:import get_color_from_hex kivy.utils.get_color_from_hex
#:import Color mui.ColorTheme.Color
#:set cor Color()

<AdoptionRScreen>:
    md_bg_color: get_color_from_hex(cor.azulCinzaClaro()+'11')

    MiauLogo:
        screen: root
    
    MDFloatLayout:
        MDIcon:
            icon: 'check-decagram'
            font_size: 75
            #size: "50dp", "100dp"
            #size_hint: None, None
            pos_hint: {'center_x': 0.5, 'center_y': 0.65}
            theme_text_color: "Custom"
            text_color: get_color_from_hex(cor.azulClaro())

        MDLabel:
            text: "Sua solicitação foi enviada ao Protetor!"
            pos_hint: {'center_x': 0.5, 'center_y': 0.50}
            font_size: "20sp"
            halign: "center"
            theme_text_color: "Custom"
            text_color: get_color_from_hex(cor.azulEscuro())

        MDFillRoundFlatButton:
            text: "Acompanhar Solicitação"
            font_size: "20sp"
            theme_text_color: "Custom"
            text_color: get_color_from_hex(cor.branco())
            md_bg_color: get_color_from_hex(cor.azulClaro())
            pos_hint: {"center_x": 0.5, "center_y": 0.3}
            size_hint: 0.7, 0.07
            on_release: root.controller.openARs()   
                