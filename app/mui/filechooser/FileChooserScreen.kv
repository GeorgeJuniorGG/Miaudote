#:kivy 2.0

<FileChooserScreen>:
    image: image_container
    MDFloatLayout:
        orientation: 'vertical'


        MDFloatLayout:
            pos_hint: {'center_x': .5, 'center_y': .6}
            MDRoundFlatIconButton:
                text: "Open manager"
                icon: "folder"
                pos_hint: {'center_x': .5, 'center_y': .6}
                on_release: root.fileManagerOpen()

        MDFloatLayout:
            size_hint: 0.8, 0.5
            pos_hint: {'center_x': 0.5, 'center_y': 0.3}
            FitImage:
                id: image_container
                pos_hint: {'center_x':0.5,'center_y': 0.5}
                source: 'keanu_reeves.jpg'
                radius: 50, 50