#:kivy 2.0
#:import get_color_from_hex kivy.utils.get_color_from_hex
#:import Color mui.ColorTheme.Color
#:set cor Color()

<PetSignUpScreen>:
    MDFloatLayout:
        pos_hint: {'center_x':0.5, 'center_y': 0.92}
        size_hint: 1, 0.005

        MDProgressBar:
            value: 0
            color: get_color_from_hex(cor.azulEscuro())
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
    
    MDIconButton:
        id: _SignupArrowButton
        icon: "arrow-left"
        user_font_size: '35sp'
        pos_hint:{'center_x': 0.08, 'center_y': 0.96}
        theme_text_color: "Custom"
        text_color: get_color_from_hex(cor.azulClaro())
        on_release:
            root.go_backward()

    MDLabel:
        text: "Informações do Animal"
        theme_text_color: "Custom"
        text_color: get_color_from_hex(cor.vermelho())
        pos_hint: {'center_y': 0.96}
        halign: "center"
        font_size: "20sp"

    MDTextField:
        id: name
        hint_text: "Nome"
        size_hint: 0.8, 0.1
        text_color_normal: get_color_from_hex(cor.azulEscuro())
        text_color_focus: get_color_from_hex(cor.azulEscuro())
        hint_text_color_normal: get_color_from_hex(cor.azulEscuro())
        hint_text_color_focus: get_color_from_hex(cor.azulEscuro())
        line_color_normal: get_color_from_hex(cor.azulEscuro())
        line_color_focus: get_color_from_hex(cor.azulEscuro())
        pos_hint: {'center_x': 0.5, 'center_y': 0.70}
    
    MDTextField:
        id: type
        hint_text: "Espécie"
        size_hint: 0.8, 0.1
        text_color_normal: get_color_from_hex(cor.azulEscuro())
        text_color_focus: get_color_from_hex(cor.azulEscuro())
        hint_text_color_normal: get_color_from_hex(cor.azulEscuro())
        hint_text_color_focus: get_color_from_hex(cor.azulEscuro())
        line_color_normal: get_color_from_hex(cor.azulEscuro())
        line_color_focus: get_color_from_hex(cor.azulEscuro())
        pos_hint: {'center_x': 0.5, 'center_y': 0.61}

    MDTextField:
        id: color
        hint_text: "Cor"
        size_hint: 0.8, 0.1
        text_color_normal: get_color_from_hex(cor.azulEscuro())
        text_color_focus: get_color_from_hex(cor.azulEscuro())
        hint_text_color_normal: get_color_from_hex(cor.azulEscuro())
        hint_text_color_focus: get_color_from_hex(cor.azulEscuro())
        line_color_normal: get_color_from_hex(cor.azulEscuro())
        line_color_focus: get_color_from_hex(cor.azulEscuro())
        pos_hint: {'center_x': 0.5, 'center_y': 0.52}

    MDTextField:
        id: sex
        hint_text: "Sexo"
        size_hint: 0.8, 0.1
        text_color_normal: get_color_from_hex(cor.azulEscuro())
        text_color_focus: get_color_from_hex(cor.azulEscuro())
        hint_text_color_normal: get_color_from_hex(cor.azulEscuro())
        hint_text_color_focus: get_color_from_hex(cor.azulEscuro())
        line_color_normal: get_color_from_hex(cor.azulEscuro())
        line_color_focus: get_color_from_hex(cor.azulEscuro())
        pos_hint: {'center_x': 0.5, 'center_y': 0.43}
        on_focus:
            if self.focus: root.menu1.open()

    MDTextField:
        id: size
        hint_text: "Porte"
        size_hint: 0.8, 0.1
        text_color_normal: get_color_from_hex(cor.azulEscuro())
        text_color_focus: get_color_from_hex(cor.azulEscuro())
        hint_text_color_normal: get_color_from_hex(cor.azulEscuro())
        hint_text_color_focus: get_color_from_hex(cor.azulEscuro())
        line_color_normal: get_color_from_hex(cor.azulEscuro())
        line_color_focus: get_color_from_hex(cor.azulEscuro())
        pos_hint: {'center_x': 0.5, 'center_y': 0.34}
        on_focus:
            if self.focus: root.menu2.open()

    MDFillRoundFlatButton:
        text: "Continuar"
        md_bg_color: get_color_from_hex(cor.azulClaro())
        font_size: "20sp"
        size_hint: 0.4, 0.05
        pos_hint: {'center_x': 0.5, 'center_y': 0.2}
        on_release:
            root.controller.petSignUpScreenManager()