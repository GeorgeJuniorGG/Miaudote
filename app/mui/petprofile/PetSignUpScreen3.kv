#:kivy 2.0
#:import get_color_from_hex kivy.utils.get_color_from_hex
#:import Color mui.ColorTheme.Color
#:set cor Color()

<PetSignUpScreen3>:
    MDProgressBar:
        value: 50
        color: get_color_from_hex(cor.azulEscuro())
        pos_hint: {'center_x': 0.5, 'center_y': 0.92}

    MDIconButton:
        id: _SignupArrowButton
        icon: "arrow-left"
        user_font_size: '35sp'
        pos_hint: {'center_x': 0.08, 'center_y': 0.96}
        theme_text_color: "Custom"
        text_color: get_color_from_hex(cor.azulClaro())
        on_release:
            root.go_backward()

    MDLabel:
        text: "Personalidade do Animal"
        theme_text_color: "Custom"
        text_color: get_color_from_hex(cor.vermelho())
        pos_hint: {'center_y': 0.96}
        halign: "center"
        font_size: "20sp"

    MDTextField:
        id: details
        hint_text: "Escreva uma descrição sobre o Animal"
        multiline: True
        size_hint: 0.8, 0.3
        text_color_normal: get_color_from_hex(cor.azulEscuro())
        text_color_focus: get_color_from_hex(cor.azulEscuro())
        hint_text_color_normal: get_color_from_hex(cor.azulEscuro())
        hint_text_color_focus: get_color_from_hex(cor.azulEscuro())
        line_color_normal: get_color_from_hex(cor.azulEscuro())
        line_color_focus: get_color_from_hex(cor.azulEscuro())
        pos_hint: {'center_x': 0.5, 'center_y': 0.75}
    
    MDLabel:
        text: "Selecione as características do Animal"
        theme_text_color: "Custom"
        text_color: get_color_from_hex(cor.vermelho())
        pos_hint: {'center_y': 0.5}
        halign: "center"
        font_size: "20sp"
    
    MDTextField:
        id: _firstField
        hint_text: "Característica 1 (Personalidade)"
        size_hint: 0.8, 0.1
        text_color_normal: get_color_from_hex(cor.azulEscuro())
        text_color_focus: get_color_from_hex(cor.azulEscuro())
        hint_text_color_normal: get_color_from_hex(cor.azulEscuro())
        hint_text_color_focus: get_color_from_hex(cor.azulEscuro())
        line_color_normal: get_color_from_hex(cor.azulEscuro())
        line_color_focus: get_color_from_hex(cor.azulEscuro())
        pos_hint: {'center_x': 0.5, 'center_y': 0.41}
        on_focus:
            if self.focus: root.menu1.open()

    MDTextField:
        id: _secondField
        hint_text: "Característica 2 (Atividades)"
        size_hint: 0.8, 0.1
        text_color_normal: get_color_from_hex(cor.azulEscuro())
        text_color_focus: get_color_from_hex(cor.azulEscuro())
        hint_text_color_normal: get_color_from_hex(cor.azulEscuro())
        hint_text_color_focus: get_color_from_hex(cor.azulEscuro())
        line_color_normal: get_color_from_hex(cor.azulEscuro())
        line_color_focus: get_color_from_hex(cor.azulEscuro())
        pos_hint: {'center_x': 0.5, 'center_y': 0.32}
        on_focus:
            if self.focus: root.menu2.open()
            
    MDTextField:
        id: _thirdField
        hint_text: "Característica 3 (Idade)"
        size_hint: 0.8, 0.1
        text_color_normal: get_color_from_hex(cor.azulEscuro())
        text_color_focus: get_color_from_hex(cor.azulEscuro())
        hint_text_color_normal: get_color_from_hex(cor.azulEscuro())
        hint_text_color_focus: get_color_from_hex(cor.azulEscuro())
        line_color_normal: get_color_from_hex(cor.azulEscuro())
        line_color_focus: get_color_from_hex(cor.azulEscuro())
        pos_hint: {'center_x': 0.5, 'center_y': 0.23}
        on_focus:
            if self.focus: root.menu3.open()

    MDFillRoundFlatButton:
        text: "Continuar"
        md_bg_color: get_color_from_hex(cor.azulClaro())
        font_size: "20sp"
        size_hint: 0.4, 0.05
        pos_hint: {'center_x': 0.5, 'center_y': 0.14}
        on_release:
            root.controller.petSignUpScreen3Manager()