#:kivy 2.0
#:import get_color_from_hex kivy.utils.get_color_from_hex
#:import Color mui.ColorTheme.Color
#:set cor Color()

<SignUpScreen4>:
    MDProgressBar:
        value: 75
        color: get_color_from_hex(cor.azulEscuro())
        pos_hint:{'center_x': 0.5, 'center_y': 0.92}

    MDIconButton:
        id: _SignupFourArrowButton
        icon: "arrow-left"
        user_font_size: '35sp'
        pos_hint:{'center_x': 0.08, 'center_y': 0.96}
        theme_text_color: "Custom"
        text_color: get_color_from_hex(cor.azulClaro())
        on_release:
            root.go_backward()

    MDLabel:
        text: "Preferências"
        theme_text_color: "Custom"
        text_color: get_color_from_hex(cor.vermelho())
        pos_hint: {'center_y': 0.96}
        halign: "center"
        font_size: "20sp"

    MDTextField:
        id: _firstField
        hint_text: "Tipo de Residência"
        size_hint: 0.8, 0.1
        text_color_normal: get_color_from_hex(cor.azulEscuro())
        text_color_focus: get_color_from_hex(cor.azulEscuro())
        hint_text_color_normal: get_color_from_hex(cor.azulEscuro())
        hint_text_color_focus: get_color_from_hex(cor.azulEscuro())
        line_color_normal: get_color_from_hex(cor.azulEscuro())
        line_color_focus: get_color_from_hex(cor.azulEscuro())
        pos_hint: {'center_x': 0.5, 'center_y': 0.72}
        on_focus:
            if self.focus: root.menu1.open()

    MDTextField:
        id: _secondField
        hint_text: "Espaço Disponível"
        size_hint: 0.8, 0.1
        text_color_normal: get_color_from_hex(cor.azulEscuro())
        text_color_focus: get_color_from_hex(cor.azulEscuro())
        hint_text_color_normal: get_color_from_hex(cor.azulEscuro())
        hint_text_color_focus: get_color_from_hex(cor.azulEscuro())
        line_color_normal: get_color_from_hex(cor.azulEscuro())
        line_color_focus: get_color_from_hex(cor.azulEscuro())
        pos_hint: {'center_x': 0.5, 'center_y': 0.6}
        on_focus:
            if self.focus: root.menu2.open()

    MDBoxLayout:
        width: self.minimum_width
        padding: [self.right/10, 0, 0, 0]
        spacing: '0.5dp'

        MDCheckbox:
            id: ambiente
            pos_hint: {'center_y': 0.5}
            size_hint: None, None
            size: "48dp", "48dp"
            color: get_color_from_hex(cor.azulEscuro())
            selected_color: get_color_from_hex(cor.azulEscuro())
            adaptive_size: False

        MDLabel:
            text: "Possui Ambiente Aberto (Quintal)"
            width: '20px'
            font_size: '17sp'
            pos_hint: {'center_y': 0.5}
            theme_text_color: 'Custom'
            text_color: get_color_from_hex(cor.azulEscuro())
            adaptive_size: True

    MDBoxLayout:
        width: self.minimum_width
        padding: [self.right/10, 0, 0, 0]
        spacing: '0.5dp'

        MDCheckbox:
            id: rotas
            pos_hint: {'center_y': 0.44}
            size_hint: None, None
            size: "48dp", "48dp"
            color: get_color_from_hex(cor.azulEscuro())
            selected_color: get_color_from_hex(cor.azulEscuro())
            adaptive_size: False

        MDLabel:
            text: "Possui Rotas de Fuga p/ Animal"
            width: '20px'
            font_size: '17sp'
            pos_hint: {'center_y': 0.44}
            theme_text_color: 'Custom'
            text_color: get_color_from_hex(cor.azulEscuro())
            adaptive_size: True

        MDIconButton:
            icon: "information-outline"
            user_font_size: '18sp'
            pos_hint: {'center_y': 0.44}
            adaptive_size: True
            on_release:
                root.show_escape_routes_dialog()

    MDBoxLayout:
        width: self.minimum_width
        padding: [self.right/10, 0, 0, 0]
        spacing: '0.5dp'

        MDCheckbox:
            id:criancas
            pos_hint: {'center_y': 0.38}
            size_hint: None, None
            size: "48dp", "48dp"
            color: get_color_from_hex(cor.azulEscuro())
            selected_color: get_color_from_hex(cor.azulEscuro())
            adaptive_size: False

        MDLabel:
            text: "Crianças frequentam o ambiente"
            width: '20px'
            font_size: '17sp'
            pos_hint: {'center_y': 0.38}
            theme_text_color: 'Custom'
            text_color: get_color_from_hex(cor.azulEscuro())
            adaptive_size: True

    MDBoxLayout:
        width: self.minimum_width
        padding: [self.right/10, 0, 0, 0]
        spacing: '0.5dp'

        MDCheckbox:
            id: _ToSCheck
            pos_hint: {'center_y': 0.32}
            size_hint: None, None
            size: "48dp", "48dp"
            color: get_color_from_hex(cor.azulEscuro())
            selected_color: get_color_from_hex(cor.azulEscuro())
            adaptive_size: False

        MDLabel:
            text: "Li e aceito os Termos de Uso"
            width: '20px'
            font_size: '17sp'
            pos_hint: {'center_y': 0.32}
            theme_text_color: 'Custom'
            text_color: get_color_from_hex(cor.azulEscuro())
            adaptive_size: True

        MDIconButton:
            icon: "information-outline"
            user_font_size: '18sp'
            pos_hint: {'center_y': 0.32}
            adaptive_size: True
            on_release:
                root.show_terms_of_service_dialog()

    MDFillRoundFlatButton:
        id: _SignupFourForwardButton
        text: "Continuar"
        md_bg_color: get_color_from_hex(cor.azulClaro())
        font_size: "20sp"
        size_hint: (0.4, 0.05)
        pos_hint: {'center_x': 0.5, 'center_y': 0.2}
        on_release:
            root.controller.singUpScreen4Manager()