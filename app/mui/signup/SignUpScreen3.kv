        pos_hint: {'center_x': 0.5, 'center_y': 0.43}
        on_focus: if self.focus: root.menu5.open()

    MDTextField:
        id: _sixthField
        hint_text: "Características 3: (Idade)"
        size_hint: 0.8, 0.1
