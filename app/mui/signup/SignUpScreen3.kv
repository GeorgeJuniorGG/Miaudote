    MDFillRoundFlatButton:
        id: _SignupThreeForwardButton
        text: "Continuar"
        md_bg_color: get_color_from_hex(cor.azulClaro())
        font_size: "20sp"
        size_hint: (0.4, 0.05)
        pos_hint: {'center_x': 0.5, 'center_y': 0.12}
        on_release:
            root.controller.singUpScreen3Manager()
