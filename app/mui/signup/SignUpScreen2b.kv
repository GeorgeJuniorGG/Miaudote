#:kivy 2.0
#:import get_color_from_hex kivy.utils.get_color_from_hex
#:import Color mui.ColorTheme.Color
#:set cor Color()

<SignUpScreen2b>:
    MDProgressBar:
        value: 50
        color: get_color_from_hex(cor.azulEscuro())
        pos_hint:{'center_x':0.5, 'center_y': 0.92}

    MDIconButton:
        id: _SignupTwoBArrowButton
        icon: "arrow-left"
        user_font_size: '35sp'
        pos_hint:{'center_x':0.08, 'center_y': 0.96}
        theme_text_color: "Custom"
        text_color: get_color_from_hex(cor.azulClaro())
        on_release:
            root.go_backward()

    MDLabel:
        text: "Localização"
        theme_text_color: "Custom"
        text_color: get_color_from_hex(cor.vermelho())
        pos_hint: {'center_y': 0.96}
        halign: "center"
        font_size: "20sp"

    MDTextField:
        id: state
        hint_text: "Estado"
        size_hint: 0.8, 0.1
        color_mode: "custom"
        line_color_normal: get_color_from_hex(cor.azulEscuro())
        line_color_focus: get_color_from_hex(cor.azulEscuro())
        pos_hint: {'center_x': 0.5, 'center_y': 0.71}

    MDTextField:
        id: city
        hint_text: "Cidade"
        size_hint: 0.8, 0.1
        color_mode: "custom"
        line_color_normal: get_color_from_hex(cor.azulEscuro())
        line_color_focus: get_color_from_hex(cor.azulEscuro())
        pos_hint: {'center_x': 0.5, 'center_y': 0.62}

    MDTextField:
        id: CEP
        hint_text: "CEP (Somente números)"
        size_hint: 0.8, 0.1
        color_mode: "custom"
        line_color_normal: get_color_from_hex(cor.azulEscuro())
        line_color_focus: get_color_from_hex(cor.azulEscuro())
        pos_hint: {'center_x': 0.5, 'center_y': 0.53}

    MDTextField:
        id: neighborhood
        hint_text: "Bairro"
        size_hint: 0.8, 0.1
        color_mode: "custom"
        line_color_normal: get_color_from_hex(cor.azulEscuro())
        line_color_focus: get_color_from_hex(cor.azulEscuro())
        pos_hint: {'center_x': 0.5, 'center_y': 0.44}

    MDTextField:
        id: address
        hint_text: "Endereço"
        size_hint: 0.8, 0.1
        color_mode: "custom"
        line_color_normal: get_color_from_hex(cor.azulEscuro())
        line_color_focus: get_color_from_hex(cor.azulEscuro())
        pos_hint: {'center_x': 0.5, 'center_y': 0.35}

    MDTextField:
        id: number
        hint_text: "Número"
        size_hint: 0.8, 0.1
        color_mode: "custom"
        line_color_normal: get_color_from_hex(cor.azulEscuro())
        line_color_focus: get_color_from_hex(cor.azulEscuro())
        pos_hint: {'center_x': 0.5, 'center_y': 0.26}
    
    MDBoxLayout:
        width: self.minimum_width
        padding: [self.right/10, 0, 0, 0]
        spacing: '4dp'

        MDCheckbox:
            id: _ToSCheck
            pos_hint: {'center_y': 0.20}
            size_hint: None, None
            size: "48dp", "48dp"
            color: get_color_from_hex(cor.azulEscuro())
            selected_color: get_color_from_hex(cor.azulEscuro())
            adaptive_size: False

        MDLabel:
            text: "Li e aceito os Termos de Uso"
            width: '20px'
            font_size: '17sp'
            pos_hint: {'center_y': 0.20}
            theme_text_color: 'Custom'
            text_color: get_color_from_hex(cor.azulEscuro())
            adaptive_size: True

        MDIconButton:
            icon: "information-outline"
            user_font_size: '20sp'
            pos_hint:{'center_y': 0.20}
            adaptive_size: True
            on_release:
                root.show_terms_of_service_dialog()

    MDFillRoundFlatButton:
        id: _SignupTwoBForwardButton
        text: "Continuar"
        md_bg_color: get_color_from_hex(cor.azulClaro())
        font_size: "20sp"
        size_hint: (0.4, 0.05)
        pos_hint: {'center_x': 0.5, 'center_y': 0.15}
        on_release:
            root.controller.singUpScreen2bManager()
