#:kivy 2.0
#:import get_color_from_hex kivy.utils.get_color_from_hex
#:import Color mui.ColorTheme.Color
#:set cor Color()

<MiaudoteMenuScreen>:
    menu: menu
    adoptRequests: adopt_requests
    addPet: add_pet
    receivedRequests: received_requests
    favorites: favorites

    MDGridLayout:
        id: menu
        cols: 1
        spacing: '15dp'
        padding: '5dp','20dp'
        md_bg_color: get_color_from_hex(cor.azulCinzaClaro()+'F2')

        MenuItem:
            id: adopt_requests
            text: 'Solicitações de Adoção'
            on_press: print(self.text)

        MenuItem:
            id: add_pet
            text: 'Incluir Pet para Adoção'
            on_press: print(self.text)

        MenuItem:
            id: received_requests
            text: 'Pedidos de Adoção Recebidos'
            on_press: print(self.text)

        MenuItem:
            id: favorites
            text: 'Favoritos'
            on_press: root.open_favorites(app)

        Widget:
            size_hint: 1, 0.4