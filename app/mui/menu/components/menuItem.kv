#:kivy 2.0
#:import get_color_from_hex kivy.utils.get_color_from_hex
#:import Color mui.ColorTheme.Color
#:set cor Color()

<MenuItem>:
    #md_bg_color: get_color_from_hex(cor.azulCinzaClaro())
    size_hint: 1, 0.2

    canvas:
        Color:
            rgba: get_color_from_hex(cor.azulClaro())
        RoundedRectangle:
            size: self.size[0], self.size[1]
            pos: self.pos
            radius: 15, 10

    MDFloatLayout:
        pos_hint: {'center_y': 0.5, 'center_x': 0.13}
        size_hint: None, None
        size: 70, 70
        #md_bg_color: get_color_from_hex(cor.azulCinzaClaro())

        MDIcon:
            icon: 'paw-outline'
            pos_hint: {'center_y': 0.5, 'center_x': 0.5}
            halign: 'center'
            font_size: '65dp'
            theme_text_color: 'Custom'
            text_color: get_color_from_hex(cor.vermelho())
        
    MDBoxLayout:
        pos_hint: {'center_y': 0.5, 'center_x': 0.63}
        size_hint: 0.8, 1
        width: 300
        padding: '10dp'
        #md_bg_color: get_color_from_hex(cor.azulCinzaClaro())

        MDLabel:
            text: root.text
            adaptive_height: True
            pos_hint: {'center_y': 0.5, 'center_x': 0.5}
            halign: 'left'
            theme_text_color: 'Custom'
            text_color: get_color_from_hex(cor.vermelho())
            font_size: '21sp'
            bold: True