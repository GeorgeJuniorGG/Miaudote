#:kivy 2.0
#:import get_color_from_hex kivy.utils.get_color_from_hex

<MenuItem>:
    #md_bg_color: get_color_from_hex('#80A6AE')
    size_hint: 1, 0.2
    canvas:
        Color:
            rgba: get_color_from_hex("#97B9C0")
        RoundedRectangle:
            size: self.size[0], self.size[1]
            pos: self.pos
            radius: 15,10

    MDFloatLayout:
        pos_hint: {'center_y': 0.5, 'center_x': 0.13}
        size_hint: None, None
        size: 70, 70
        #md_bg_color: get_color_from_hex('80A6AE')
        MDIcon:
            icon: 'paw-outline'
            pos_hint: {'center_y': 0.5, 'center_x': 0.5}
            halign: 'center'
            font_size: '65dp'
            theme_text_color: 'Custom'
            text_color: get_color_from_hex('8C5042')
        

    MDBoxLayout:
        pos_hint: {'center_y': 0.5, 'center_x': 0.63}
        size_hint: 0.8, 1
        width: 300
        padding: '10dp'
        #md_bg_color: get_color_from_hex('80A6AE')

        MDLabel:
            text: root.text
            adaptive_height: True
            pos_hint: {'center_y': 0.5, 'center_x': 0.5}
            halign: 'left'
            theme_text_color: 'Custom'
            text_color: get_color_from_hex('8C5042')
            font_size: '21sp'
            bold: True