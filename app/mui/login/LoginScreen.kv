#:kivy 2.0
#:import get_color_from_hex kivy.utils.get_color_from_hex
#:import Color mui.ColorTheme.Color
#:set cor Color()

<LoginScreen>:
    MDFloatLayout:
        MDIconButton:
            id: _LoginArrowButton
            icon: "arrow-left"
            user_font_size: '35sp'
            pos_hint: {"center_y": 0.95}
            theme_text_color: "Custom"
            text_color: get_color_from_hex(cor.azulClaro())
            on_release:
                root.controller.goBackward()        

        MDLabel:
            text: "Login"
            theme_text_color: "Custom"
            text_color: get_color_from_hex(cor.vermelho())
            pos_hint: {'center_y': 0.8}
            halign: "center"
            font_size: "25sp"

        MDTextField:
            id: email
            hint_text: "E-mail"
            mode: "fill"
            radius: 20, 20, 20, 20
            multiline: False
            active_line: False
            line_color_focus: get_color_from_hex(cor.azulEscuro())
            text_color_normal: get_color_from_hex(cor.azulEscuro())
            text_color_focus: get_color_from_hex(cor.azulEscuro())
            hint_text_color_normal: get_color_from_hex(cor.azulEscuro())
            hint_text_color_focus: get_color_from_hex(cor.azulEscuro())
            fill_color_normal: get_color_from_hex(cor.branco())
            fill_color_focus: get_color_from_hex(cor.branco())
            pos_hint: {"center_x": 0.5, "center_y": 0.6}
            size_hint: 0.8, 0.075

        MDTextField:
            id: password
            hint_text: "Senha"
            password: True
            mode: "fill"
            radius: 20, 20, 20, 20
            multiline: False
            active_line: False
            line_color_focus: get_color_from_hex(cor.azulEscuro())
            text_color_normal: get_color_from_hex(cor.azulEscuro())
            text_color_focus: get_color_from_hex(cor.azulEscuro())
            hint_text_color_normal: get_color_from_hex(cor.azulEscuro())
            hint_text_color_focus: get_color_from_hex(cor.azulEscuro())
            fill_color_normal: get_color_from_hex(cor.branco())
            fill_color_focus: get_color_from_hex(cor.branco())
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            size_hint: 0.8, 0.075

        MDIconButton:
            icon: "eye-off"
            pos_hint: {"center_x": 0.83, "center_y": 0.5}
            theme_text_color: "Custom"
            text_color: get_color_from_hex(cor.azulEscuro())
            on_release:
                self.icon = "eye" if self.icon == "eye-off" else "eye-off"
                password.password = False if password.password is True else True

        MDFillRoundFlatButton:
            id: _LoginLoginButton
            text: "Entrar"
            font_size: "20sp"
            theme_text_color: "Custom"
            text_color: get_color_from_hex(cor.branco())
            md_bg_color: get_color_from_hex(cor.azulClaro())
            pos_hint: {"center_x": 0.5, "center_y": 0.35}
            size_hint: 0.35, 0.05
            on_press:
                root.controller.login(email.text, password.text)