#:kivy 2.0
#:import get_color_from_hex kivy.utils.get_color_from_hex
#:import Color mui.ColorTheme.Color
#:set cor Color()

<UserInfo>:
    #md_bg_color: get_color_from_hex(cor.azulEscuro())
    size_hint: 1, 0.18

    MDBoxLayout:
        orientation: 'vertical'
        #md_bg_color: get_color_from_hex(cor.azulEscuro())
        size_hint: None, None
        pos: self.parent.pos
        size: self.parent.size

        MDLabel:
            text: root.fieldName
            theme_text_color: 'Custom'
            text_color: get_color_from_hex(cor.vermelho())
            pos_hint: {'x': 0.001}
            bold: True
            halign: 'left'

        MDLabel:
            text: root.fieldValue

            pos_hint: {'x': 0.001}
            theme_text_color: 'Custom'
            text_color: get_color_from_hex(cor.azulEscuro())

        MDSeparator:
            color: get_color_from_hex(cor.azulClaro())
            height: 2