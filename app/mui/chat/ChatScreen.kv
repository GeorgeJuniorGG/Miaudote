#:kivy 2.0
#:import get_color_from_hex kivy.utils.get_color_from_hex
#:import Color mui.ColorTheme.Color
#:set cor Color()

<MessageSent>:
    size_hint_y: None
    pos_hint: {'right': 0.98}
    height: self.texture_size[1]
    padding: 12, 10
    theme_text_color: "Custom"
    text_color: get_color_from_hex(cor.branco())
    canvas.before:
        Color:
            rgb: get_color_from_hex(cor.vermelhoEscuro())
        RoundedRectangle:
            size: self.width, self.height
            pos: self.pos
            radius: [23, 23, 0, 23]

<MessageReceived>:
    size_hint_y: None
    pos_hint: {'x': 0.02}
    height: self.texture_size[1]
    padding: 12, 10
    theme_text_color: "Custom"
    text_color: cor.branco()
    canvas.before:
        Color:
            rgb: get_color_from_hex(cor.azulCinzaEscuro())
        RoundedRectangle:
            size: self.width, self.height
            pos: self.pos
            radius: [23, 23, 23, 0]

<ChatScreen>:
    chat_list: chat_list
    text_input: text_input
    anUserName: anUserName
    anUserImage: anUserImage

    MDIconButton:
        icon: "arrow-left"
        user_font_size: "35sp"
        pos_hint: {"center_y": 0.95}
        theme_text_color: "Custom"
        text_color: get_color_from_hex(cor.cinza())
        on_release: root.goBack()

    FloatLayout:
        MDFloatLayout:
            #md_bg_color: get_color_from_hex('#ececec')
            size_hint: None, None
            height: 75
            width: 75
            pos_hint: {'top': 0.98, 'center_x':0.5}
            canvas.before:
                Color: 
                    rgba: get_color_from_hex(cor.vermelho())  
                RoundedRectangle:
                    size: dp(85), dp(85)
                    pos: self.x - dp(5), self.y - dp(5)
                    radius: 50,50

            FitImage:
                id: anUserImage
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                radius: 50, 50

        MDLabel:
            id: anUserName
            font_size: "23sp"
            halign: "center"
            theme_text_color: "Custom"
            text_color: get_color_from_hex(cor.vermelho())
            pos_hint: {'center_y': 0.835}

    ScrollView:
        size_hint_y: 0.7
        pos_hint: {'x': 0,'y': 0.1}
        do_scroll_x: False
        do_scroll_y: True
        BoxLayout:
            id: chat_list
            orientation: 'vertical'
            size: (root.width, root.height)
            height: self.minimum_height
            size_hint: None, None
            pso_hint: {'top': 10}
            cols: 1
            spacing: 5

    MDFloatLayout:
        md_bg_color: get_color_from_hex(cor.brancoCinza())
        size_hint_y: 0.09
        MDFloatLayout:
            size_hint: .8, .75
            pos_hint: {'center_x':.43, 'center_y':.5}
            canvas:
                Color:
                    rgb: get_color_from_hex(cor.brancoCinzaEscuro())
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [23, 23, 23, 23]

            MDIconButton:
                icon: "emoticon-outline"
                pos_hint: {'center_x':.08, 'center_y':.5}
                user_font_size: "25sp"
                theme_text_color: "Custom"
                text_color: get_color_from_hex(cor.vermelhoEscuro())

            TextInput:
                id: text_input
                hint_text: "Mensagem"
                size_hint: 0.82, 0.85
                pos_hint: {'center_x':.55, 'center_y':.5}
                font_size: "18sp"
                height: self.minimum_height
                multiline: True
                cursor_color: get_color_from_hex(cor.vermelhoEscuro())
                cursor_width: "2sp"
                foreground_color: get_color_from_hex(cor.vermelhoEscuro())
                background_color: get_color_from_hex(cor.transparente()+'00')
                padding: 5,12,20,5

        MDIconButton:
            icon: "send"
            pos_hint: {'center_x':.91, 'center_y':.5}
            user_font_size: "25sp"
            theme_text_color: "Custom"
            text_color: get_color_from_hex(cor.vermelhoEscuro())
            on_release:
                root.send()