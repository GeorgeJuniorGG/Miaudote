#:kivy 2.0
#:import get_color_from_hex kivy.utils.get_color_from_hex
#:import Color mui.ColorTheme.Color
#:set cor Color()

<WelcomeScreen>:
    md_bg_color: get_color_from_hex(cor.azulCinzaClaro()+'11')
    
    canvas:
        Color:
            rgba: get_color_from_hex(cor.vermelho())
        Line:
            points: self.x + 20, 70, self.right - 20, 70
            width: 1

    FitImage:
        source: "logo_miaudote.png"
        user_font_size: '100sp'
        pos_hint:{'center_x':0.5, 'center_y': 0.75}
        size_hint: None, None
        size: 250, 281

    MDFillRoundFlatButton:
        id: _welcomeLoginButton
        text: "Login"
        md_bg_color: get_color_from_hex(cor.azulClaro())
        font_size: "20sp"
        size_hint: 0.6, 0.06
        pos_hint: {'center_x': 0.5, 'center_y': 0.45}
        on_release:
            root.controller.welcomeToLogin()
            
    MDFillRoundFlatButton:
        id: _welcomeSignupButton
        text: "Cadastre-se"
        font_size: "20sp"
        md_bg_color: get_color_from_hex(cor.azulClaro())
        size_hint: 0.6, 0.06
        pos_hint: {'center_x': 0.5, 'center_y': 0.365}
        on_press:
            root.controller.welcomeToSignUp()

    MDLabel:
        text: "Miaudote"
        font_name: "Spirax-Regular"
        theme_text_color: "Custom"
        text_color: get_color_from_hex(cor.vermelho())
        pos_hint: {'center_y': 0.15}
        halign: "center"
        font_size: "25sp"