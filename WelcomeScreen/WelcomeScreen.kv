#:kivy 2.0
<WelcomeScreen>

    canvas:
        Color:
            rgba: 0.549, 0.313, 0.258, 1
        Line:
            points: self.x + 20, 70, self.right - 20, 70
            width: 1

    MDIconButton:
        icon: "paw.png"
        user_font_size: '100sp'
        pos_hint:{'center_x':0.5, 'center_y': 0.8}

    MDFillRoundFlatButton:
        text: "Login"
        md_bg_color: 0.592, 0.725, 0.752, 1
        font_size: "20sp"
        size_hint: (0.8, 0.07)
        pos_hint: {'center_x': 0.5, 'center_y': 0.55}

    MDFillRoundFlatButton:
        text: "Cadastrar-se"
        font_size: "20sp"
        md_bg_color: 0.592, 0.725, 0.752, 1
        size_hint: (0.8, 0.07)
        pos_hint: {'center_x': 0.5, 'center_y': 0.45}

    MDLabel:
        text: "Miaudote"
        font_name: "Spirax-Regular"
        theme_text_color: "Custom"
        text_color: 0.549, 0.313, 0.258, 1
        pos_hint: {'center_y': 0.15}
        halign: "center"
        font_size: "25sp"
